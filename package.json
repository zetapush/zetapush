{
  "name": "zetapush",
  "description": "Zeta Push Next",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:zetapush/zetapush.git"
  },
  "author": "ci@zetapush.com",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "conventional-changelog-angular": "^1.6.5",
    "conventional-changelog-core": "^2.0.4",
    "conventional-recommended-bump": "^2.0.5",
    "cz-lerna-changelog": "^1.2.1",
    "husky": "^0.14.3",
    "lerna": "^2.8.0",
    "lint-staged": "^6.1.0",
    "node": "8.9",
    "prettier": "^1.10.2"
  },
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "prettify": "prettier --write 'packages/*/{bin,src}/**/*.{js,ts}'",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:build": "lerna run build",
    "lerna:publish": "lerna publish --conventional-commits --changelog-preset angular --force-publish=*",
    "lerna:test": "lerna run test:ci"
  },
  "lint-staged": {
    "packages/*/{bin,src}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
